---
const links = [
  "hurley",
  "shuttleworth",
  "glover",
  "ansari",
];
const { idParams } = Astro.props;
---

<div class="flex gap-4 mt-4">
  {
    links.map((link) => (
      <a
        href={link}
        class:list={[
          "w-3 h-3 rounded-full",
          {
            "bg-secondary": idParams === link,
            "bg-gray-600": idParams !== link,
          },
        ]}
      />
    ))
  }
</div>
